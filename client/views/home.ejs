  }
  25% {
    left: 0;
    opacity: 1;
  }
  75% {
    left: 100%;
    opacity: 1;
  }
  100% {
    left: 200%;
    opacity: 0;
  }
}

@keyframes rotateAnimation {
  from {
    transform: translate(-50%, -50%) rotate(0deg);
  }
  to {
