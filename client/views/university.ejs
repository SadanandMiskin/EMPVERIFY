



<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>University Form</title>
    <link href="https://fonts.googleapis.com/css2?family=American+Captain&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="./adminstyle.css">

<body>
    <div class="container pt-1 mt-5" align="center" style="width: 200%;">
        <div class="text pb-5 textBackground" style="height: 100vh;">
            <h1 class="px-5 mt-5 pt-5">
                <span class="d-block"> <span class="me-5" style="font-size: 90px;
                    font-weight: 900; color: rgb(0, 149, 255)">Welcome</span> </span><span
                    class="animated-text-2 ps-5 ms-5"><%= university %></span>
            </h1>
            <div class="description">
                <p>Manage your Employee Details Efficiently</p>
                <p>Powered by Blockchain.</p>
            </div>
        </div>
        <button type="button" class="btn btn-lg arrow-down form-btn fw-bolder" onclick="scrollToForm()"
            align="center">Click to Open Form</button>
        <div id="form-section" class="container  mt-5 py-5" style="top: 150%; width: 450px;">
             <form id="studentform" enctype="multipart/form-data" class="admin-form row  justify-content-center px-3 py-5 my-5">
                <div class="form-group px-4 py-5 col-lg-12">
                    <legend class="legend">Student Name</legend>
                    <input  class="form-control" placeholder="Enter your name" type="text" id="studentName" name="studentName"
                        required>
                </div>

                <div class="form-group col-lg-12 px-4 py-5">
                    <legend class="legend">Student Wallet Address</legend>
                    <input  class="form-control"  placeholder="Enter Wallet Address" type="text" id="studentWalletAddress" name="studentWalletAddress"
                        required>
                </div>
                <div class="form-group px-4 py-5 col-lg-12 ">
                    <legend class="legend">Choose a file to upload</legend>
                    <input  class="form-control" placeholder="Choose file"  type="file" id="studentProfile" name="studentProfile"
                        required>
                </div>
                <div class="row px-0 pb-5 mb-5">

                    <div class="col-lg-5  py-5" align="left">
                        <button type="submit" id="submit" class="btn btn-lg  fw-bolder form-btn ms-3 px-4">Add details</button>
                    </div>

                </div>

            </form>
        </div>
        <% studentList.forEach(function(student){ %>
        <div class="row gx-2">

            <div class="card col-lg-4 my-5  px-3 float-start"
                style="width: 40rem; height: 50rem; border: 2px solid rgb(241, 244, 46); background-color:black">
                <div class="row py-5 px-3 h-100 " style="border-bottom: 2px solid rgb(237, 244, 46);">
                    <% if (student.profile) { %>
                    <img src="data:image/jpeg;base64,<%= student.profile.toString('base64') %>" alt="Student Image"
                        class="card-img-center object-fit-contain rounded my-4 " alt="..." height="140px" width="180px">
                    <% } %>

                </div>
                <div class="row h-100 p-4">
                    <div class="card-body p-2" style="text-align: center;">
                        <h5 class="card-title text-bright fs-2 fw-bold" style="color: rgb(0, 140, 255);">Student Details</h5>
                        <div>
                            <p class="card-text text-bright d-inline fs-4"><%= student.studentName %> </p>
                            <!-- <p class="card-text text-bright d-inline">javeed</p> -->
                        </div>
                        <div>
                            <p class="card-text text-bright d-inline fs-4"><%= student.studentAddress %></p>
                            <!-- <p class="card-text text-bright d-inline">##12452562</p> -->
                        </div>
                        <br>

                        
                        <div class="col-lg-12  py-1 mt-1" align="center">
                            <a href="/studentProfile?address=<%= student.studentAddress %>"><button type="button"
                                    class="btn btn-lg  fw-bolder form-btn py-2 px-5 mt-4">View</button></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <% }) %>
        <script>
            function scrollToForm() {
                const formSection = document.getElementById('form-section');
                formSection.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        </script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/ethers/5.7.2/ethers.umd.min.js"
            integrity="sha512-FDcVY+g7vc5CXANbrTSg1K5qLyriCsGDYCE02Li1tXEYdNQPvLPHNE+rT2Mjei8N7fZbe0WLhw27j2SrGRpdMg=="
            crossorigin="anonymous" referrerpolicy="no-referrer"></script>
        <script src="../js/addStudent.js"></script>


        <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.9.1/gsap.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous">
        </script>
</body>

</html>